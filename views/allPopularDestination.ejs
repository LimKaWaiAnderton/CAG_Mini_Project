<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AirPlus</title>
    <!-- Css -->
    <link rel="stylesheet" href="/css/allPopularDestination.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    <!-- Javascript -->
    <script src="/javascript/javascript.js"></script>
</head>

<body>
    <section class="header">
        <!-- Navigation Bar -->
        <section class="navbar">
            <%- include(user ? 'partials/loggedNav' : 'partials/navbar') %>
        </section>
        <section class="allPopularDestinaton">
            <h1>Top Travelled Destinations</h1>
            <p>Explore Top Destinations provided by us</p>
            <% if (user) { %>
                <a href="/addDestination" class="addBtn">Add Destination</a>
            <% } %>
        </section>
        <!-- Popular Destinations -->
        <section class="allPopularContainer">
            <% for (let i = 0; i < popular.length; i++) { %>
                <div class="popularCard">
                    <div class="popularImage">
                        <img src="images/<%= popular[i].countryImage %>" alt="<%= popular[i].countryName %>">
                    </div>
                    <div class="popularDetails">
                        <div class="popularName">
                            <span>Destination:</span>
                            <strong><%= popular[i].countryName %></strong>
                        </div>
                        <% if (user) { %>
                            <div class="admin">
                                <a href="/editDestination/<%= popular[i].countryID %>">Edit</a>
                                <a href="/deleteDestination/<%= popular[i].countryID %>"
                                   onclick="return confirm('Are you sure you want to delete this destination?')">Delete</a>
                            </div>
                        <% } %>
                    </div>
                </div>
            <% } %>
        </section>
    </section>
</body>

</html>